<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Login'}) %>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="wrapper">
      <h1 class="title-one">Login</h1>
      <form class="form-box" action="/user/login" method="post">
        <div class="input-wrapper">
          <label class="input-wrapper__label" for="username">Username</label>
          <input class="input-wrapper__input" type="text" name="username" id="username">
          <p class="input-wrapper__error"><%= locals.error %></p>
        </div>
      
        <div class="input-wrapper">
          <label class="input-wrapper__label" for="password">Password</label>
          <input class="input-wrapper__input" type="password" name="password" id="password">
          <p class="input-wrapper__error"><%= locals.error %></p>
        </div>
      
        <button class="button" type="submit">Login</button>
      </form>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
</html>