<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Only Members | Posts</title>
</head>
<body>
  <%- include('partials/header') %>
  <p><%= locals.message %></p>

  <form action="/posts" method="get">
    <label for="search">Search</label>
    <input type="text" name="search" id="search">
    <button type="submit">Search</button>
  </form>

  <% if (result.search) { %>
    <p>Displaying results for '<%= result.search %>'</p>
  <% } %>

  <% result.posts.forEach((post) => { %>
    <%- include('partials/post', { post }) %>
  <% }) %>

  <nav>
    <h2>Pagination</h2>

    <% if (result.search) { %>
      <ul>
        <% for (let index = 1; index <= result.pages; index++) { %>
          <li>
            <a href="<%= index > 1 ? `/posts?page=${index}&search=${result.search}` : `/posts?search=${result.search}` %>">
              <%= index %>
            </a>
          </li>
        <% } %>
      </ul>
    <% } else { %>
      <ul>
        <% for (let index = 1; index <= result.pages; index++) { %>
          <li>
            <a href="<%= index > 1 ? `/posts?page=${index}` : '/posts' %>">
              <%= index %>
            </a>
          </li>
        <% } %>
      </ul>
    <% } %>
    
  </nav>
  <script src="/script.js"></script>
</body>
</html>