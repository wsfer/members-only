<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Posts'}) %>
<body>
  <%- include('partials/header') %>
  <p><%= locals.message %></p>

  <form action="/posts" method="get">
    <label for="search">Search</label>
    <input type="text" name="search" id="search">
    <button type="submit">Search</button>
  </form>

  <% if (result.search) { %>
    <p>Displaying results for '<%= result.search %>'</p>
  <% } %>

  <% result.posts.forEach((post) => { %>
    <%- include('partials/post', { post }) %>
  <% }) %>

  <nav>
    <h2>Pagination</h2>

    <% if (result.search) { %>
      <ul>
        <li><a href="<%= `/posts?search=${result.search}` %>">1</a></li>
        <% for (let index = 2; index <= result.pages; index++) { %>
          <li>
            <a href="<%= `/posts?page=${index}&search=${result.search}` %>"><%= index %></a>
          </li>
        <% } %>
      </ul>
    <% } else { %>
      <ul>
        <li><a href="<%= `/posts` %>">1</a></li>
        <% for (let index = 2; index <= result.pages; index++) { %>
          <li>
            <a href="<%= `/posts?page=${index}` %>"><%= index %></a>
          </li>
        <% } %>
      </ul>
    <% } %>
  </nav>
  <script src="/script.js"></script>
</body>
</html>